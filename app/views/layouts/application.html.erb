<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body>

<header class="navbar navbar-inverse">
    <div class = "container">
      <div class = "row">
       <div class = "col-xs-12">
          <nav class = "nav navbar-nav navber-left">
            <p style = "color:white">Bookers</p>
          </nav>
          <nav>
           <ul class= "nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class = "nav-item">
                <p style = "color:gray">
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to "Home" , user_path(current_user) %></p>
              </li>
              <li class = "nav-item">
                <p style = "color:gray">
                <span class="glyphicon glyphicon-link" aria-hidden="true"></span><%= link_to "Users" , users_path %></p>
              </li>
              <li class = "nav-item">
                <p style = "color:gray">
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span><%= link_to "Books" , books_path %></p>
              </li>
              <li class = "nav-item">
                <p style = "color:gray">
              <span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to "logout" , destroy_user_session_path , method: :delete %></p>
            </li>

            <% else %>
              <li class = "nav-item">
                <p style = "color:gray">
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to "Home" , root_path %></p>
              </li>
              <li class = "nav-item">
                <p style = "color:gray">
                <span class="glyphicon glyphicon-link" aria-hidden="true"></span><%= link_to "About" , home_about_path %></p>
              </li>
              <li class = "nav-item">
                <p style = "color:gray">
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span><%= link_to "sign up" , new_user_registration_path %></p>
              </li>
              <li class = "nav-item">
                <p style = "color:gray">
                <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span><%= link_to "login" , new_user_session_path %></p>
              </li>
           <% end %>
            </ul>
         </nav>
    </div>
  </div>
</div>
 </header>
 <div class= "container">
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </div>
  </body>
</html>