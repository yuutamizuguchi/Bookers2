<div class= "row">
  <%= render 'layouts/common', user: @user, book: Book.new %>
<div class="col-xs-9">
  <h2>Book detail</h2>
  <table class="table">
  <tbody>
  	<td>
      <%= link_to user_path(@book.user) do %>
      <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size:"60x60" %><br>
      <%= @user.name %>
      <% end %>
	</td>
	<td>
      <%= link_to book_path(@book.id) do %>
      <%= @book.title %>
      <% end %>
	</td>
	<td>
	  <%= @book.body %>
	</td>
      <% if @book.user == current_user %>
    <td>
      <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
    </td>
    <td>
      <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
    </td>
<% end %>
</tbody>
</table>
</div>
</div>
